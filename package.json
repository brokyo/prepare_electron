  "postinstall": "electron-builder install-app-deps",
  "repository": {
    "type": "git",
    "url": "https://github.com/brokyo/prepare_electron"
  },
  "author": "apc",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "electron-json-storage": "^4.1.8",
    "electron-updater": "^4.2.2",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "node-hue-api": "^4.0.5"
  }
}
